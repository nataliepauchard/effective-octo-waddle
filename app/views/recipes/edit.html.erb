<h1>Update Recipe</h1>

<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :autofocus => true %>

  <%= f.label :duration %>
  <%= f.text_field :duration %>

  <%= f.label :image %>
  <%= f.url_field :image %>

<div class="ingmethod">
  <%= f.label :ingredients %>
  <%= f.text_field :ingredients, :class => "resizedTextbox", :required => true %>

  <%= f.label :method %>
  <%= f.text_field :method, :class => "resizedTextbox", :required => true %>
</div>
  <%= f.submit %>
<% end %>
