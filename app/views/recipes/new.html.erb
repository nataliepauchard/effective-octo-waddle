<h1>New Recipe</h1>

<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :autofocus => true %>

  <%= f.label :duration %>
  <%= f.text_field :duration %>

  <%= f.label :image %>
  <%= f.url_field :image %>

  <%= f.label :ingredients, :class => "resizedTextbox" %>
  <%= f.text_field :ingredients, :required => true %>

  <%= f.label :method, :class => "resizedTextbox" %>
  <%= f.text_field :method, :required => true %>

  <%= f.submit %>
<% end %>
